---
pagination: 
    data: newsletters
    size: 1
    alias: newsletter
permalink: "/newsletters/{{ newsletter.title | slug }}/index.html"
---
<style type="text/css">
  body,
  html, 
  .body {
    background: #f3f3f3 !important;
  }
</style>
<!-- move the above styles into your custom stylesheet -->

<container>

  <spacer size="16"></spacer>
  <row>
    <columns>
      <h1 class="text-center">{{ newsletter.title }}</h1>
      <center>
        <img src="https://placehold.it/500x200">
      </center>

      <spacer size="16"></spacer>
      
      {{ newsletter.opening }}

      <row>
        <columns large="6">
          <h2>More Reading:</h2>
          <ul>
            {% for item in newsletter.bookmarks %}
                <li><h3><a href="{{ item.url }}">{{ item.pageTitle }}</a></h3>
                    <p>{{item.description}}
                </li>
            {% endfor %}
          </ul>
        </columns>
        
      </row>

      <p><small>You received this email because you're signed up to get updates from us. <a href="#">Click here to unsubscribe.</a></small></p>
    </columns>
  </row>
</container>
